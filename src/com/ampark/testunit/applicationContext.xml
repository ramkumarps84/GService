<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mongo="http://www.springframework.org/schema/data/mongo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.2.xsd
           http://www.springframework.org/schema/data/mongo
           http://www.springframework.org/schema/data/mongo/spring-mongo-1.0.xsd">
               
    <context:annotation-config/>
    <context:component-scan base-package="com.ampark.controller"></context:component-scan>
    <context:component-scan base-package="com.ampark.db"></context:component-scan>
    <context:component-scan base-package="com.ampark.test"></context:component-scan>
    <context:component-scan base-package="com.ampark.repository"></context:component-scan>
    <context:component-scan base-package="com.ampark.application"></context:component-scan>
    <context:component-scan base-package="com.ampark.domain"></context:component-scan>
    <context:component-scan base-package="com.ampark.config"></context:component-scan>
    <context:component-scan base-package="com.ampark.service"></context:component-scan>


</beans>